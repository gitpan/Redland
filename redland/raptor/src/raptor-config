prefix=/usr/local
exec_prefix=${prefix}

if test "${prefix}/include" != /usr/include ; then
  includes="-I${prefix}/include"
else
  includes=
fi


usage()
{
	cat<<EOF
Usage: raptor-config [OPTION]

known values for OPTION are:

  --prefix[=DIR]        change raptor prefix [default $prefix]
  --libs                print library linking information
  --libtool-libs        print linking information for use with libtool
  --cflags		print pre-processor and compiler flags
  --options		print raptor library compiled options
  --help                display this help and exit
  --version             output version information
  --version-decimal     output version as a decimal integer
EOF
  exit $1
}


if test $# -eq 0; then
  usage 1 1>&2
fi


while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
        prefix=$optarg
        ;;
    --prefix)
      echo_prefix=yes
      ;;
    --version)
      echo 1.4.13
      exit 0
      ;;
    --version-decimal)
      echo 10413
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --options)
      echo_options=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --libtool-libs)
      echo_libtool_libs=yes
      ;;
    --help|--usage)
      usage 0
      ;;
    *)
      usage 1 1>&2
      ;;
  esac

  shift
done
  

if test "$echo_prefix" = "yes"; then
  echo $prefix
fi
if test "$echo_cflags" = "yes"; then
  echo $includes
fi
if test "$echo_options" = "yes"; then
  if test libcurl != none; then
    echo "www-library: libcurl"
  fi
  if test libxml != none; then
    echo "xml-parser: libxml"
  fi
  for parser in  rdfxml ntriples turtle guess rss-tag-soup n3 grddl none; do
    if test $parser != none; then
      echo "parser: $parser"
    fi
  done
  for serializer in  rdfxml rdfxml-abbrev ntriples rss-1.0 atom none; do
    if test $serializer != none; then
      echo "serializer: $serializer"
    fi
  done
fi
if test "$echo_libs" = "yes"; then
  echo -L${exec_prefix}/lib -lraptor  -L/usr/lib -lcurl -L/usr/lib -lgssapi_krb5 -lkrb5 -lk5crypto -lkrb5support -lcom_err -lresolv -lidn -lssl -lcrypto -ldl -lssl -lcrypto -lz -L/usr/lib -lxml2 -L/usr/lib -lxslt -lxml2
fi
if test "$echo_libtool_libs" = "yes"; then
  echo ${exec_prefix}/lib/libraptor.la
fi
